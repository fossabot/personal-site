{{#each this.periods}}
  <div class="tc" style="flex:1;">
    <!-- //TODO add hourly API call on name.click-->
    <div class="sans-serif mid-gray b f5-ns f4 bt bb b--light-gray pv2">{{name}}</div>
    <div class="flex items-stretch justify-center flex-row flex-column-ns">
      <div class="mid-gray f6-ns f4 ph2 pt2 pb0 lh-copy flex flex-column">
        <div class="f6 b mb1">{{temperature}}&deg;F</div>
        <div class="relative w-60-ns w-30 center">
          {{#if icon_split}}
          <img class="relative top-0 left-0" src="/assets/images/svg/{{icon_left}}.svg#left" />
          <img class="absolute top-0 left-0" src="/assets/images/svg/{{icon_right}}.svg#right" />
          {{else}}
          <img class="relative top-0 left-0" alt="{{shortForecast}}" title="{{shortForecast}}" src="/assets/images/svg/{{icon_left}}.svg#full" />
          {{/if}}
        </div>
        <div class="pv2-ns f7">
          {{{icon_text}}}
        </div>
      </div>
      <div class="bg-mid-gray white f6-ns f4 pa2 lh-copy flex flex-column flex-auto">
        {{#if night_temperature}}
        <div class="f6 b mb1">{{night_temperature}}&deg;F</div>
        <div class="relative w-60-ns w-30 center">
          {{#if night_icon_split}}
          <img class="relative top-0 left-0" src="/assets/images/svg/{{night_icon_left}}.svg#left" />
          <img class="absolute top-0 left-0" src="/assets/images/svg/{{night_icon_right}}.svg#right" />
          {{else}}
          <img class="relative top-0 left-0" alt="{{shortForecast}}" title="{{shortForecast}}" src="/assets/images/svg/{{night_icon_left}}.svg#full" />
          {{/if}}
        </div>
        <div class="pv2-ns f7">
          {{{night_icon_text}}}
        </div>
        {{else}}
        <div class="f6 b mb1">&dash;</div>
        <div class="relative w-60-ns w-30 center">
          <img class="relative top-0 left-0" src="/assets/images/svg/night_na.svg#full" />
        </div>
        <div class="pv2-ns f7">&nbsp;</div>
        {{/if}}
      </div>
    </div>
  </div>
{{/each}}
